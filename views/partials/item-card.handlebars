<div class="column is-one-quarter">
  <div class="card">

    <div class="card-header secondary is-size-5">
      <p class="card-header-title is-centered textcolor">
        {{!-- Item Name --}}
        {{name}}
      </p>
    </div>
    <div class="card-content is-flex is-flex-wrap-wrap">
      {{!-- Item description --}}
      <div class="column is-full mb-3 p-0" style="border-bottom: 1px solid darkgray;">{{description}}</div>
      <hr>
      <div class="column is-full" style="text-align: right;">
        Amount In Stock: {{in_stock}}
        <br>
        ${{price}}
      </div>
    </div>
    <div class="card-footer secondary is-flex is-justify-content-center">
      {{!-- route add to cart --}}
      {{#if loggedIn}}
      <button type="submit" class="button secondary textcolor is-align-self-center is-size-5" id="add-btn"
        data-item-id="{{id}}">Add to Cart</button>
      {{else}}
      <a href="/user/login" class="button secondary textcolor is-align-self-center is-size-5">Add to Cart</a>
      {{/if}}

    </div>
  </div>
</div>

{{#if loggedIn}}
<script src="/Javascript/orderHandler.js"></script>
{{/if}}